type User {
  id: ID! @id 
  email: String! @unique
  name: String!
  password: String!
  groups: [GroupParticipant] @relation(onDelete: CASCADE)
  createGroups: [Group]
}

type Session {
  id: ID! @id
  email: String! @unique  
  token: String! @unique  
}

type Group {
  id: ID! @id
  categories: [Category] @relation(onDelete: CASCADE)
  name: String!
  groupParticipants: [GroupParticipant] @relation(onDelete: CASCADE)
  createUser: User!
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

type GroupParticipant {
  id: ID! @id
  groupId: Group 
  userId: User 
  name: String!
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

type Category {
  id: ID! @id
  groupId: Group
  rooms: [Room] @relation(onDelete: CASCADE)
  name: String!
  categoryParticipants: [CategoryParticipant] @relation(onDelete: CASCADE)
  createUser: User!  
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

type CategoryParticipant {
  id: ID! @id
  categoryId: Category 
  userId: User 
  name: String!
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

type Room {
  id: ID! @id
  groupId: Group
  categoryId: Category
  bookings: [Booking] @relation(onDelete: CASCADE)
  name: String!
  startTime: String!
  endTime: String!
  minPerson: Int!
  location: String
  createUser: User!  
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

type Booking {
  id: ID! @id
  groupId: Group
  categoryId: Category
  roomId: Room
  date: String!
  startTime: String!
  endTime: String!
  title: String!
  department: String!
  name: String!
  bookingParticipants: [BookingParicipant] @relation(onDelete: CASCADE)
  createUser: User!  
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

type BookingParicipant {
  id: ID! @id
  bookingId: Booking 
  userId: User 
  name: String!
  createDate: DateTime! @createdAt
  updateDate: DateTime! @updatedAt
}

